# mysql gem     -*- sh -*-

mysql_gem_check() {
  ${SUDO_GEM} gem list mysql | grep mysql >/dev/null
}

mysql_gem_install() {
  if mysql_gem_check ; then
    echo "mysql gem already installed"
  else
    if [ $PKG = "brew" ] ; then
      where=/usr/local/bin
    elif [ $PKG = "macport" ] ; then
      where=/opt/local/lib/mysql55/bin
    fi

    ${SUDO_GEM} env ARCHFLAGS="-arch x86_64" gem install mysql --no-rdoc --no-ri -- --with-mysql-config=${where}/mysql_config
  fi
}

mysql_gem_uninstall() {
  ${SUDO_GEM} gem uninstall -a mysql
}
